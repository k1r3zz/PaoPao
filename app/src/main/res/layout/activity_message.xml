<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical"
    tools:context="com.user.paopao.main.message.MessageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_12"
            android:src="@drawable/bg_left_black" />

        <LinearLayout
            android:layout_width="@dimen/dimen_150"
            android:layout_height="@dimen/dimen_30"
            android:layout_centerInParent="true"
            android:background="@drawable/ll_home_top"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_1">

            <TextView
                android:id="@+id/bt_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_home_top_normal"
                android:gravity="center"
                android:text="@string/menu_message"
                android:textColor="@color/selector_text_normal"
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/bt_friend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bt_home_top_normal"
                android:gravity="center"
                android:text="@string/mess_paoyou"
                android:textColor="@color/selector_text_normal"
                android:textSize="@dimen/text_16" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_12"
            android:src="@drawable/bg_find" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/c_F4F4F4" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/paoyou"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/c_F5F5F5"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_guanzhu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_72"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@drawable/ll_selector">


                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_12"
                    android:src="@drawable/bg_guanzhu" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_17"
                    android:layout_toRightOf="@+id/image1"
                    android:text="@string/mess_guanzhu"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dimen_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text1"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_toRightOf="@+id/image1"
                    android:text="66位"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/dimen_14" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_12"
                    android:src="@drawable/bg_right_gray" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_fans"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_72"
                android:layout_marginTop="@dimen/dimen_1"
                android:background="@drawable/ll_selector">


                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_12"
                    android:src="@drawable/bg_fensi" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_17"
                    android:layout_toRightOf="@+id/image2"
                    android:text="@string/mess_fensi"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/dimen_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text2"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:layout_toRightOf="@+id/image2"
                    android:text="66位"
                    android:textColor="@color/c_999999"
                    android:textSize="@dimen/dimen_14" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_12"
                    android:src="@drawable/bg_right_gray" />

            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>


</LinearLayout>
