<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_54"
    android:background="@drawable/ll_selector">

    <TextView
        android:id="@+id/item_rmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_12"
        android:text="￥10"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/text_14" />

    <TextView
        android:id="@+id/item_paopao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="100泡泡"
        android:textColor="@color/c_757575"
        android:textSize="@dimen/text_14" />


    <Button
        android:id="@+id/recharge"
        android:layout_width="69dp"
        android:layout_height="@dimen/dimen_26"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_12"
        android:background="@drawable/ll_recharge"
        android:text="@string/rech_title"
        android:textColor="@color/c_ffffff"
        android:textSize="@dimen/text_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_alignParentBottom="true"
        android:background="@color/c_F4F4F4" />

</RelativeLayout>
