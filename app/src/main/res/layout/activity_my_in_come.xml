<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_F4F4F4"
    android:orientation="vertical"
    tools:context="com.user.paopao.main.mine.myincome.MyInComeActivity">

    <com.user.paopao.widget.titleview.TitleView
        android:id="@+id/mtitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/mrl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:layout_alignParentBottom="true"
        android:background="@color/c_ffffff">

        <TextView
            android:id="@+id/tv_buttom0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_12"
            android:text="@string/income_zongshouru"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/text_13" />

        <TextView
            android:id="@+id/tv_buttom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_6"
            android:layout_toRightOf="@+id/tv_buttom0"
            android:text="102222泡币"
            android:textColor="@color/c_fc508e"
            android:textSize="@dimen/text_13" />

        <Button
            android:id="@+id/but_tixian"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/c_fc508e"
            android:text="@string/income_qutixian"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/text_15" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mrl"
        android:layout_below="@+id/mtitleView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_1"
                android:background="@color/c_ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_44"
                    android:background="@color/c_ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimen_12">

                    <View
                        android:layout_width="@dimen/dimen_5"
                        android:layout_height="@dimen/dimen_15"
                        android:background="@drawable/ll_recharge" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_6"
                        android:text="@string/income_liwu"
                        android:textColor="@color/c_333333"
                        android:textSize="@dimen/text_13" />

                    <TextView
                        android:id="@+id/tv_liwupaobi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_6"
                        android:text="10222泡币"
                        android:textColor="@color/c_fc508e"
                        android:textSize="@dimen/text_13" />

                </LinearLayout>

                <com.user.paopao.widget.NoSrollerRecycler
                    android:id="@+id/mRecycler1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.user.paopao.widget.NoSrollerRecycler>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/c_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_12">

                <View
                    android:layout_width="@dimen/dimen_5"
                    android:layout_height="@dimen/dimen_15"
                    android:background="@drawable/ll_recharge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:text="@string/income_xiangce"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/tv_xiangcepaobi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:text="10222泡币"
                    android:textColor="@color/c_fc508e"
                    android:textSize="@dimen/text_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/c_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_12">

                <View
                    android:layout_width="@dimen/dimen_5"
                    android:layout_height="@dimen/dimen_15"
                    android:background="@drawable/ll_recharge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:text="@string/income_lianxifangshi"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/tv_lianxifangshipaobi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:text="10222泡币"
                    android:textColor="@color/c_fc508e"
                    android:textSize="@dimen/text_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44"
                android:layout_marginTop="@dimen/dimen_1"
                android:background="@color/c_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_12">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_wechat" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_12"
                    android:text="@string/income_weixin"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/tv_weixin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:gravity="right"
                    android:paddingRight="@dimen/dimen_12"
                    android:text="10222泡币"
                    android:textColor="@color/c_fc508e"
                    android:textSize="@dimen/text_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44"
                android:layout_marginTop="@dimen/dimen_1"
                android:background="@color/c_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_12">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_tl" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_12"
                    android:text="@string/income_shouji"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/tv_shouji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:gravity="right"
                    android:paddingRight="@dimen/dimen_12"
                    android:text="10222泡币"
                    android:textColor="@color/c_fc508e"
                    android:textSize="@dimen/text_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44"
                android:layout_marginTop="@dimen/dimen_1"
                android:background="@color/c_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_12">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_qq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_12"
                    android:text="@string/income_QQ"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/tv_qq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:gravity="right"
                    android:paddingRight="@dimen/dimen_12"
                    android:text="10222泡币"
                    android:textColor="@color/c_fc508e"
                    android:textSize="@dimen/text_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@color/c_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_12">

                <View
                    android:layout_width="@dimen/dimen_5"
                    android:layout_height="@dimen/dimen_15"
                    android:background="@drawable/ll_recharge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:text="@string/income_yaoqinghaoyou"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/tv_yaoqinghaoyoupaobi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:text="10222泡币"
                    android:textColor="@color/c_fc508e"
                    android:textSize="@dimen/text_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44"
                android:layout_marginTop="@dimen/dimen_1"
                android:background="@color/c_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_12">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/income_yaoqingshouru"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/tv_yaoqingshouru"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:gravity="right"
                    android:paddingRight="@dimen/dimen_12"
                    android:text="10222泡币"
                    android:textColor="@color/c_fc508e"
                    android:textSize="@dimen/text_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44"
                android:layout_marginTop="@dimen/dimen_1"
                android:background="@color/c_ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen_12">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/income_yaoqingticheng"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:id="@+id/tv_yaoqingticheng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_6"
                    android:gravity="right"
                    android:paddingRight="@dimen/dimen_12"
                    android:text="10222泡币"
                    android:textColor="@color/c_fc508e"
                    android:textSize="@dimen/text_13" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44"
                android:background="@color/c_fffcf7"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_12"
                    android:text="@string/income_paopao"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/income_id"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/text_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimen_12"
                    android:text="@string/income_tichengpaobi"
                    android:textColor="@color/c_333333"
                    android:textSize="@dimen/text_13" />

            </RelativeLayout>

            <com.user.paopao.widget.NoSrollerRecycler
                android:id="@+id/mRecycler2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dimen_10"
                android:background="@color/c_fffcf7" />
        </LinearLayout>


    </ScrollView>


</RelativeLayout>
