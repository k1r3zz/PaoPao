<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_F4F4F4"
    tools:context="com.user.paopao.main.mine.setting.SettingActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_49"
        android:layout_alignParentBottom="true"
        android:background="@color/c_fc508e"
        android:text="@string/setting_tuichuzhanghao"
        android:textColor="@color/c_ffffff"
        android:textSize="@dimen/text_14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <com.user.paopao.widget.titleview.TitleView
            android:id="@+id/mtitleView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:id="@+id/xiaoxituisong"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@drawable/ll_selector">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_12"
                android:text="@string/setting_xiaoxituisong"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dimen_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_12"
                android:src="@drawable/bg_right_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/yijianfankui"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@drawable/ll_selector">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_12"
                android:text="@string/setting_yijianfankui"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dimen_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_12"
                android:src="@drawable/bg_right_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/yonghubidu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginTop="@dimen/dimen_1"
            android:background="@drawable/ll_selector">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_12"
                android:text="@string/setting_yonghubidu"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dimen_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_12"
                android:src="@drawable/bg_right_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/zaixiankefu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginTop="@dimen/dimen_1"
            android:background="@drawable/ll_selector">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_12"
                android:text="@string/setting_zaixiankefu"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dimen_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_12"
                android:src="@drawable/bg_right_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/qingchuhuancun"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginTop="@dimen/dimen_1"
            android:background="@drawable/ll_selector">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_12"
                android:text="@string/setting_qingchuhuancun"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dimen_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_12"
                android:src="@drawable/bg_right_gray" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/guanyupaopao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginTop="@dimen/dimen_1"
            android:background="@drawable/ll_selector">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_12"
                android:text="@string/setting_guanyupaopao"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/dimen_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_12"
                android:src="@drawable/bg_right_gray" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
