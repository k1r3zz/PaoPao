<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llcontext"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical"
    tools:context=".main.login.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_15"
            android:src="@drawable/bg_whiteleft" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/reg_reg"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/text_16" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginRight="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_45">

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/bg_phone" />


        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_toRightOf="@+id/iv_phone"
            android:background="@color/c_00000000"
            android:hint="@string/lo_tel"
            android:textColor="@color/c_D6D6D6"
            android:textColorHint="@color/c_D6D6D6"
            android:textSize="@dimen/text_15" />

        <ImageView
            android:id="@+id/delet_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/bg_delet_gray" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_30"
        android:background="@color/c_D6D6D6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginRight="@dimen/dimen_40">

        <ImageView
            android:id="@+id/iv_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/bg_mail" />


        <EditText
            android:id="@+id/et_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_toRightOf="@+id/iv_mail"
            android:background="@color/c_00000000"
            android:hint="@string/rer_inputyanzhengma"
            android:textColor="@color/c_D6D6D6"
            android:textColorHint="@color/c_D6D6D6"
            android:textSize="@dimen/text_15" />

        <TextView
            android:id="@+id/delet_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/rer_yanzhengma"
            android:textColor="@color/c_ffffff"
            android:textSize="@dimen/text_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_30"
        android:background="@color/c_D6D6D6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginRight="@dimen/dimen_40">

        <ImageView
            android:id="@+id/iv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/bg_password" />


        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_toRightOf="@+id/iv_password"
            android:background="@color/c_00000000"
            android:hint="@string/reg_mima"
            android:textColor="@color/c_D6D6D6"
            android:textColorHint="@color/c_D6D6D6"
            android:textSize="@dimen/text_15" />

        <ImageView
            android:id="@+id/delet_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/bg_delet_gray" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_30"
        android:background="@color/c_D6D6D6" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginRight="@dimen/dimen_40">

        <ImageView
            android:id="@+id/iv_yaoqingma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/bg_yaoqingma" />


        <EditText
            android:id="@+id/et_yaoqingma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_toRightOf="@+id/iv_yaoqingma"
            android:background="@color/c_00000000"
            android:hint="@string/reg_yaoqingren"
            android:textColor="@color/c_D6D6D6"
            android:textColorHint="@color/c_D6D6D6"
            android:textSize="@dimen/text_15" />

        <ImageView
            android:id="@+id/delet_yaoqingma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/bg_delet_gray" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_marginLeft="@dimen/dimen_50"
        android:layout_marginRight="@dimen/dimen_30"
        android:background="@color/c_D6D6D6" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_46"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginRight="@dimen/dimen_40"
        android:layout_marginTop="@dimen/dimen_55"
        android:background="@drawable/bt_selector"
        android:text="@string/reg_reg"
        android:textColor="@color/c_ffffff"
        android:textSize="@dimen/text_16" />

    <!--<Button-->
    <!--android:id="@+id/bt_registered"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/dimen_46"-->
    <!--android:layout_marginLeft="@dimen/dimen_40"-->
    <!--android:layout_marginRight="@dimen/dimen_40"-->
    <!--android:layout_marginTop="@dimen/dimen_40"-->
    <!--android:background="@drawable/bt_selector"-->
    <!--android:text="@string/lo_registered"-->
    <!--android:textColor="@color/c_ffffff"-->
    <!--android:textSize="@dimen/text_16" />-->

    <TextView
        android:id="@+id/bt_registered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_30"
        android:text="@string/reg_login"
        android:textColor="@color/c_ffffff"
        android:textSize="@dimen/text_15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_30"
        android:text="@string/reg_xieyi"
        android:textColor="@color/c_C5C3C5"
        android:textSize="@dimen/text_15" />


</LinearLayout>
